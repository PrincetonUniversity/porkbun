<!DOCTYPE html>

<html>
  <head>
    <title>PorkBun</title>
    <meta name='author' content='Khatanbuuvei Bold and Justin Chang'>
    <link rel='stylesheet' href='/style/styles.css'>
    <!-- Bootstrap v4 -->
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'
      integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous'>
  </head>

  <body>
    <% include ../partials/header %>
    <div class='container'>
      <h1>Your Preferences</h1>
      <ul class="list-inline">
        <li class="list-inline-item">
          <h3>Dishes</h3>
          <ul>
            <% prefs.forEach(item => { %>
              <li><%= item %></li>
            <% }) %>
          </ul>
          <form action='/prefs' method='post'>
            <label style="display:block; margin-top:25px" for='dish'>
              <em>Add a dish to your preferences:</em>
            </label>
            <input type='text' placeholder='Pork Buns' name='dish' id='dish'>
            <input type='submit'>
          </form>
        </li>
      </ul>
    </div>

    <% include ../partials/footer %>
  </body>
</html>